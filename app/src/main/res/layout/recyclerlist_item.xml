<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:id="@+id/cardlist_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    android:background="?android:attr/selectableItemBackground"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="@dimen/cardview_default_elevation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/app_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:scaleType="fitXY"
            android:src="@mipmap/b9" />

        <TextView
            android:id="@+id/app_tv_name"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/app_img"
            android:layout_toRightOf="@id/app_img"
            android:text="App Name"
            android:textColor="@color/primary_text_default_material_light"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/app_tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/app_tv_name"
            android:layout_marginLeft="16dp"
            android:layout_toEndOf="@id/app_img"
            android:layout_toRightOf="@id/app_img"
            android:text="Version"
            android:textColor="@color/secondary_text_default_material_light"
            android:textSize="14sp" />

        <RatingBar
            android:id="@+id/app_rb"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="80dp"
            android:layout_height="16dp"
            android:layout_below="@id/app_tv_version"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/app_img"
            android:rating="5" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/app_rb"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/app_img"
            android:text="2015-11-2 | 902MB"
            android:textSize="14sp" />

        <Button
            android:id="@+id/app_btn_down"
            android:layout_width="64dp"
            android:layout_height="28dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/app_tv_version"
            android:layout_marginRight="8dp"
            android:background="?attr/colorPrimary"
            android:text=" 下载 "
            android:textColor="@android:color/primary_text_dark" />

        <TextView
            android:id="@+id/app_tv_introduction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/app_img"

            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:text="超级英雄：重生 是Phosphor Games根据美剧制作而成的一款角色扮演类游戏，游戏本身将还原电视剧的剧情"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/app_rv_img"
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:layout_below="@id/app_tv_introduction"
            android:layout_marginTop="8dp"
            android:scaleType="center"
            android:src="@mipmap/a6" />
    </RelativeLayout>


</android.support.v7.widget.CardView>